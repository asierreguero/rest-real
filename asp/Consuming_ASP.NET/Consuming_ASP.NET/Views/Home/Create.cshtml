@model Consuming_ASP.NET.Models.Questions

@{
    ViewBag.Title = "Create";
}
<div class="block">
<h2 class="zootopia">Create</h2>

@using (Html.BeginForm("Create", "QuestedController"))
{
    @Html.AntiForgeryToken()

